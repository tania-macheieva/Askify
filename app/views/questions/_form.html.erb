<%= form_with model: @question do |form| %>

  <p class="mt mb-sm"><%= form.text_area :body, rows: 5, class: "form-text-area", placeholder: "Enter your question" %></p>
  
  <p><%= form.text_field :user_id, class: "form-text-field", placeholder: "User ID" %></p>

  <p class="mt"><%= form.submit "Save", class: "button button-main mb-lg" %></p>
<% end %>